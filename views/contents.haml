%nav#sidebar
  %div#logo
    %a{href: '/'}
      %img{src: '/images/logo_kl.png'}
  %h3= I18n.t('toc')
  = @toc
%div#content
  - if current_user && current_user.is_admin?
    %form{method: :post}
      %textarea{name: :data_fragment_html}= @contents
    %a{href: "/#{locale}/logout", id: :logout_link} Logout
  - else
    = @contents
